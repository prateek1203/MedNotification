<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Employee" transaction-type="RESOURCE_LOCAL">
		<!-- <class>Emp.Employee_dept</class> <class>Emp.Employee_Details</class> -->
		<class>com.User</class>
		<class>com.Prescription</class>
		<class>com.PatientMedicine</class>
		<class>com.Notification</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/employee" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root@123" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipelink.logging.level" value="DEBUG" />
			<property name="eclipselink.ddl-generation.output-mode "
				value="sql-script" />
			<property name="eclipselink.logging.file" value="C:\log\Persistence.log" />
			<property name="eclipselink.logging.level.sql" value="ALL" />
			<property name="eclipselink.logging.parameters" value="true" />
			<property name="eclipselink.query-results-cache" value="false" />

		</properties>
	</persistence-unit>
</persistence>